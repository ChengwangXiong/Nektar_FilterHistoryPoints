<?xml version="1.0" encoding="utf-8"?>


<NEKTAR>

  <EXPANSIONS>
    <E COMPOSITE="C[0,1]" NUMMODES="5" FIELDS="u,v,p" TYPE="MODIFIED" />
  </EXPANSIONS>

  <CONDITIONS>
    <SOLVERINFO>
      <I PROPERTY="EQTYPE" VALUE="UnsteadyNavierStokes"/>
      <I PROPERTY="AdvectionForm" VALUE="Convective"/>
      <I PROPERTY="TimeIntegrationMethod" VALUE="IMEXOrder2"/>
      <I PROPERTY="solvertype" VALUE="VelocityCorrectionScheme"/>
      <I PROPERTY="Projection" VALUE="Continuous"/>
    </SOLVERINFO>

    <PARAMETERS>
      <P> TimeStep      = 0.001 </P>
      <P> NumSteps      = 5000     </P>
      <P> IO_CheckSteps = 150000  </P>
      <P> IO_InfoSteps  = 150000    </P>
      <P> Kinvis        = 1     </P>
      <P> gamma        =2     </P>
      <P> C            =20    </P>
      <P> p           =3.14159265  </P>
    </PARAMETERS>

    <VARIABLES>
      <V ID="0"> u </V> 
      <V ID="1"> v </V> 
      <V ID="2"> p </V> 
    </VARIABLES>

    <BOUNDARYREGIONS>
      <B ID="0"> C[2] </B> //walls
      <B ID="1"> C[3] </B> /inflow
      <B ID="2"> C[4] </B> //outflow
      <B ID="3"> C[5] </B> //obl
    </BOUNDARYREGIONS>

    <BOUNDARYCONDITIONS>
      <REGION REF="0">
        <D VAR="u" VALUE="0" />
        <D VAR="v" VALUE="0" />
        <N VAR="p" USERDEFINEDTYPE="H" VALUE="0" />  // High Order Pressure BC
      </REGION>
      <REGION REF="1">
        <D VAR="u" VALUE="FILE:Test_ChanFlow2D_bcsfromfiles_u_1.bc" />//y*(1-y) stored
        <D VAR="v" VALUE="0" />
        <N VAR="p" USERDEFINEDTYPE="H" VALUE="0" />
      </REGION>
      <REGION REF="2">
        <N VAR="u" VALUE="0"  />
        <N VAR="v" VALUE="0" />
        <D VAR="p" VALUE="0" />
      </REGION>

      <REGION REF="3">
        <N VAR="u" VALUE="FILE:Test_ChanFlow2D_bcsfromfiles_u_3.bc" />//1-2*y stored
        <D VAR="v" VALUE="FILE:Test_ChanFlow2D_bcsfromfiles_v_3.bc" />// 0 stored
        <D VAR="p" VALUE="-2*Kinvis*(x-1)" />
      </REGION>
    </BOUNDARYCONDITIONS>
   <FUNCTION NAME="InitialConditions">
     <E VAR="u" VALUE="y*(1-y)" />
     <E VAR="v" VALUE="0" />
     <E VAR="p" VALUE="0" />
   </FUNCTION>

    <FUNCTION NAME="ExactSolution">
      <E VAR="u" VALUE="y*(1-y)" />
      <E VAR="v" VALUE="0" />
      <E VAR="p" VALUE="-2*Kinvis*(x-1)" />
    </FUNCTION> 

    
  </CONDITIONS>

  <GEOMETRY DIM="2" SPACE="2">
    
    <VERTEX>
      <!-- Always must have four values per entry. -->      
      <V ID="0"> 0.0    0.0    0.0 </V>
      <V ID="1"> 0.5    0.0    0.0 </V>
      <V ID="2"> 1.0    0.0    0.0 </V>
      <V ID="3"> 0.0    0.5    0.0 </V>
      <V ID="4"> 1.0    0.5    0.0 </V>
      <V ID="5"> 0.0    1.0    0.0 </V>
      <V ID="6"> 0.5    1.0    0.0 </V>
      <V ID="7"> 1.0    1.0    0.0 </V>
    </VERTEX>

    <EDGE>
      <E ID="0"> 0 1 </E>
      <E ID="1"> 1 2 </E>
      <E ID="2"> 0 3 </E>
      <E ID="3"> 1 6</E>
      <E ID="4"> 2 4 </E>
      <E ID="5"> 4 7 </E>
      <E ID="6"> 4 6</E>
      <E ID="7"> 3 5 </E>
      <E ID="8"> 3 6 </E>
      <E ID="9"> 5 6 </E>
      <E ID="10"> 6 7 </E>
    </EDGE>
    
    <!-- Q - quads, T - triangles, S - segments, E - tet, P - pyramid, R - prism, H - hex -->
    <!-- Only certain element types are appropriate for the given dimension (dim on mesh) -->
    <!-- Can also use faces to define 3-D elements.  Specify with F[1] for face 1, for example. -->
    <ELEMENT>
      <Q ID="0"> 0 3 8 2 </Q>
      <Q ID="1"> 4 6 3 1 </Q>
      <T ID="2"> 8 9 7 </T>
      <T ID="3"> 6 5 10 </T>
    </ELEMENT>
    
    <COMPOSITE>
      <C ID="0"> Q[0,1] </C>
      <C ID="1"> T[2,3] </C>
      <C ID="2"> E[0,1,10,9] </C>   // Walls
      <C ID="3"> E[2,7] </C>         // Inflow
      <C ID="4"> E[4,5] </C>         // Outflow
      <C ID="5"> E[3]   </C>        //obl
    </COMPOSITE>

    <DOMAIN> C[0,1] </DOMAIN>

  </GEOMETRY>
  
</NEKTAR>

