<?xml version="1.0" encoding="utf-8"?>

<NEKTAR>

  <GEOMETRY DIM="2" SPACE="2">
    
    <VERTEX>
      <!-- Always must have four values per entry. -->      
      <V ID="0"> 0.0    0.0    0.0 </V>
      <V ID="1"> 1.0    0.0    0.0 </V>
      <V ID="2"> 2.0    0.0    0.0 </V>
      <V ID="3"> 0.0    1.0    0.0 </V>
      <V ID="4"> 1.0    1.0    0.0 </V>
      <V ID="5"> 2.0    1.0    0.0 </V>
      <V ID="6"> 0.0    2.0    0.0 </V>
      <V ID="7"> 1.0    2.0    0.0 </V>
      <V ID="8"> 2.0    2.0    0.0 </V>
    </VERTEX>

    <EDGE>
      <E ID="0"> 0 1 </E>
      <E ID="1"> 1 2 </E>
      <E ID="2"> 0 3 </E>
      <E ID="3"> 1 4 </E>
      <E ID="4"> 2 5 </E>
      <E ID="5"> 3 4 </E>
      <E ID="6"> 4 5 </E>
      <E ID="7"> 3 6 </E>
      <E ID="8"> 4 7 </E>
      <E ID="9"> 5 8 </E>
      <E ID="10"> 6 7 </E>
      <E ID="11"> 7 8 </E>
    </EDGE>
    
    <!-- Q - quads, T - triangles, S - segments, E - tet, P - pyramid, R - prism, H - hex -->
    <!-- Only certain element types are appropriate for the given dimension (dim on mesh) -->
    <!-- Can also use faces to define 3-D elements.  Specify with F[1] for face 1, for example. -->
    <ELEMENT>
      <Q ID="0"> 0 3 5 2 </Q>
      <Q ID="1"> 1 4 6 3 </Q>
      <Q ID="2"> 5 8 10 7 </Q>
      <Q ID="3"> 6 9 11 8 </Q>
    </ELEMENT>
    
    <!-- V - vertex, S - Segment, E - edge, F - face -->
    <COMPOSITE>
      <C ID="0"> Q[0-3] </C>
      <C ID="1"> E[0,1] </C>
    </COMPOSITE>

    <DOMAIN> C[0] </DOMAIN>

  </GEOMETRY>
  
  <EXPANSIONS>
    <E COMPOSITE="C[0]" NUMMODES="8" TYPE="MODIFIED" />
  </EXPANSIONS>

  <CONDITIONS>

    <VARIABLES>
      <V ID="0"> u </V> 
    </VARIABLES>

    <BOUNDARYREGIONS>
      <B ID="0"> C[1] </B>
    </BOUNDARYREGIONS>

    <BOUNDARYCONDITIONS>
      <REGION REF="0">
        <D VAR="u" VALUE="cos(x)" />
      </REGION>
    </BOUNDARYCONDITIONS>

    <FORCING>
      <F VAR="u" VALUE="cos(x)*cos(y)" />
    </FORCING>   

    <EXACTSOLUTION>
      <F VAR="u" VALUE="cos(x)*cos(y)" />
    </EXACTSOLUTION>
    
  </CONDITIONS>
  
</NEKTAR>

