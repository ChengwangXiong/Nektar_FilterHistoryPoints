<?xml version="1.0" encoding="utf-8"?>

<NEKTAR>

  <GEOMETRY DIM="2" SPACE="2">
    
    <VERTEX>
      <!-- Always must have four values per entry. -->      
      <V ID="0"> -1.0   -1.0    0.0 </V>
      <V ID="1">  0.0   -1.0    0.0 </V>
      <V ID="2">  1.0   -1.0    0.0 </V>
      <V ID="3"> -1.0    0.0    0.0 </V>
      <V ID="4">  0.0    0.0    0.0 </V>
      <V ID="5">  1.0    0.0    0.0 </V>
      <V ID="6"> -1.0    1.0    0.0 </V>
      <V ID="7">  0.0    1.0    0.0 </V>
      <V ID="8">  1.0    1.0    0.0 </V>
    </VERTEX>

    <EDGE>
      <E ID="0"> 0 1 </E>
      <E ID="1"> 1 2 </E>
      <E ID="2"> 0 3 </E>
      <E ID="3"> 1 4 </E>
      <E ID="4"> 2 5 </E>
      <E ID="5"> 3 4 </E>
      <E ID="6"> 4 5 </E>
      <E ID="7"> 6 3 </E>
      <E ID="8"> 4 7 </E>
      <E ID="9"> 5 8 </E>
      <E ID="10"> 6 7 </E>
      <E ID="11"> 7 8 </E>
      <E ID="12"> 0 4 </E>
      <E ID="13"> 1 5 </E>
      <E ID="14"> 3 7 </E>
      <E ID="15"> 4 8 </E>
    </EDGE>
    
    <!-- Q - quads, T - triangles, S - segments, E - tet, P - pyramid, R - prism, H - hex -->
    <!-- Only certain element types are appropriate for the given dimension (dim on mesh) -->
    <!-- Can also use faces to define 3-D elements.  Specify with F[1] for face 1, for example. -->
    <ELEMENT>
      <T ID="0"> 0 3 12 </T>
      <T ID="1"> 2 12 5 </T>
      <T ID="2"> 1 4 13 </T>
      <T ID="3"> 3 13 6 </T>
      <T ID="4"> 14 5 8 </T>
      <T ID="5"> 10 7 14 </T>
      <T ID="6"> 9 15 6 </T>
      <T ID="7"> 15 11 8 </T>
    </ELEMENT>
    
    <!-- V - vertex, S - Segment, E - edge, F - face -->
    <COMPOSITE>
      <C ID="0"> T[0-7] </C>
      <C ID="1"> E[0,1,2,4,7,9,10,11] </C>
    </COMPOSITE>

    <DOMAIN> C[0] </DOMAIN>

  </GEOMETRY>
  
  <EXPANSIONS>
    <E COMPOSITE="C[0]" NUMMODES="11" TYPE="MODIFIED" />
  </EXPANSIONS>

  <CONDITIONS>

    <PARAMETERS>
      <P> Dt    = 0.0001 </P>
      <P> Steps = 10000  </P>
      <P> Check = 100    </P>
    </PARAMETERS>

    <VARIABLES>
      <V ID="0"> u </V> 
    </VARIABLES>

    <BOUNDARYREGIONS>
      <B ID="0"> C[1] </B>
    </BOUNDARYREGIONS>

    <BOUNDARYCONDITIONS>
      <REGION REF="0">
        <D VAR="u" VALUE="0" />
      </REGION>
    </BOUNDARYCONDITIONS>

    <FORCING>
      <F VAR="u" VALUE="cos(x)*cos(y)" />
    </FORCING>   

    <EXACTSOLUTION>
      <F VAR="u" VALUE="exp(-(((x+0.5)*(x+0.5))+(y*y))/(2.0*(1.0/8.0)*(1.0/8.0)))" />
    </EXACTSOLUTION>
    
    <INITIALCONDITIONS>
      <F VAR="u" VALUE="exp(-(((x+0.5)*(x+0.5))+(y*y))/(2.0*(1.0/8.0)*(1.0/8.0)))" />
    </INITIALCONDITIONS>
    
  </CONDITIONS>
  
</NEKTAR>

