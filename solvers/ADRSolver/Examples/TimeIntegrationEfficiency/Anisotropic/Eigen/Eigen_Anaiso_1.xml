<?xml version="1.0" encoding="utf-8" ?>
<NEKTAR>
    <GEOMETRY DIM="2" SPACE="2">
        <VERTEX>
            <V ID="0">1.000e+00 1.000e+00 0.000e+00</V>
            <V ID="1">-1.000e+00 1.000e+00 0.000e+00</V>
            <V ID="2">-1.000e+00 -1.000e+00 0.000e+00</V>
            <V ID="3">1.000e+00 -1.000e+00 0.000e+00</V>
        </VERTEX>
        <EDGE>
            <E ID="0">    0  1   </E>
            <E ID="1">    1  2   </E>
            <E ID="2">    2  3   </E>
            <E ID="3">    3  0   </E>
        </EDGE>
        <ELEMENT>
            <Q ID="0">    0     1     2     3 </Q>
        </ELEMENT>
        <COMPOSITE>
            <C ID="0"> Q[0] </C>
            <C ID="1"> E[2,3,0,1] </C>
        </COMPOSITE>
        <DOMAIN> C[0] </DOMAIN>
    </GEOMETRY>
    <EXPANSIONS>
        <E COMPOSITE="C[0]" NUMMODES="#NUMMODES#" FIELDS="u" TYPE="MODIFIED" />
    </EXPANSIONS>
    
    <CONDITIONS>

    <PARAMETERS>
      <P> NumQuadPointsError = 60           </P>
    </PARAMETERS>

    <SOLVERINFO>
      <I PROPERTY="EQTYPE" VALUE="EigenValuesAdvection"/>
      <I PROPERTY="Projection" VALUE="DisContinuous"/>    
    </SOLVERINFO>

    <VARIABLES>
      <V ID="0"> u </V> 
    </VARIABLES>

    <BOUNDARYREGIONS>
      <B ID="0"> C[1] </B>
    </BOUNDARYREGIONS>

    <BOUNDARYCONDITIONS>
      <REGION REF="0">
        <D VAR="u" VALUE="exp(-41*((x+(0.3*cos(2*PI*0)))*(x+(0.3*cos(2*PI*0)))+(y-(0.3*sin(2*PI*0)))*(y-(0.3*sin(2*PI*0)))))" />
      </REGION>
    </BOUNDARYCONDITIONS>

    <FUNCTION NAME="AdvectionVelocity">
      <E VAR="Vx" VALUE="2*PI*y"  />
      <E VAR="Vy" VALUE="-2*PI*x" />
    </FUNCTION>  
    
    <FUNCTION NAME="ExactSolution">
      <E VAR="u" VALUE="exp(-41*((x+(0.3*cos(2*PI*0)))*(x+(0.3*cos(2*PI*0)))+(y-(0.3*sin(2*PI*0)))*(y-(0.3*sin(2*PI*0)))))" />
    </FUNCTION>
    
  </CONDITIONS>
        
</NEKTAR>