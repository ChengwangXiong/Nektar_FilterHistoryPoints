<?xml version="1.0" encoding="utf-8"?>
<NEKTAR>
  <GEOMETRY DIM="1" SPACE="1">
    
    <VERTEX>
      <V ID="0"> -5.0  0.0  0.0 </V>
      <V ID="1"> -3.0  0.0  0.0 </V>
      <V ID="2"> -1.0  0.0  0.0 </V>
      <V ID="3">  1.0  0.0  0.0 </V>
      <V ID="4">  3.0  0.0  0.0 </V>
      <V ID="5">  5.0  0.0  0.0 </V>
    </VERTEX>
    
    <ELEMENT>
      <S ID="0"> 0 1 </S>
      <S ID="1"> 1 2 </S>
      <S ID="2"> 2 3 </S>
      <S ID="3"> 3 4 </S>
      <S ID="4"> 4 5 </S>
    </ELEMENT>
    
    <!-- V - vertex, S - Segment, E - edge, F - face -->
    <COMPOSITE>
        <C ID="0"> S[0-4]  </C>
        <C ID="1"> V[0]    </C>
        <C ID="2"> V[5]    </C>
    </COMPOSITE>

    <DOMAIN> C[0] </DOMAIN>
  </GEOMETRY>

  <EXPANSIONS>
    <E COMPOSITE="C[0]" NUMMODES="11" TYPE="MODIFIED" />
  </EXPANSIONS>
  
  <CONDITIONS>

   <PARAMETERS>
      <P> TimeStep       = 0.003             </P>
      <P> NumSteps       = 10000             </P>
      <P> FinTime        = TimeStep*NumSteps </P>
      <P> IO_CheckSteps  = 100               </P>
      <P> IO_InfoSteps   = 100               </P>
      <P> DisContinuous  = 1                 </P>
   </PARAMETERS>

    <SOLVERINFO>
      <I EQTYPE="Advection" />
    </SOLVERINFO> 
    
    <VARIABLES>
      <V ID="0"> u </V> 
    </VARIABLES>

    <BOUNDARYREGIONS>
      <B ID="0"> C[1,2] </B>
    </BOUNDARYREGIONS>

    <BOUNDARYCONDITIONS>
      <REGION REF="0">
	<D VAR="u" VALUE="1" />
      </REGION>
    </BOUNDARYCONDITIONS>

    <USERDEFINEDEQNS>
      <F LHS="Vx" VALUE="0.2"/> 
    </USERDEFINEDEQNS>   
    
    <EXACTSOLUTION>
      <F VAR="u" VALUE="1" />
    </EXACTSOLUTION>
    
    <INITIALCONDITIONS>
      <F VAR="u" VALUE="1+exp(-((x+3)^2)/1)" />
    </INITIALCONDITIONS>
 
  </CONDITIONS>
  
</NEKTAR>

